<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ApplicationProjetX"
             x:Class="ApplicationProjetX.MainPage">

        <Image Source="http://jeuxdepiste.com/logo%20jeux%20de%20piste.jpg" HorizontalOptions="Center" />
    <ListView x:Name="listAccueil">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <ViewCell.View>
                        <Label Text="{Binding name}" VerticalOptions="Center" HorizontalOptions="Center"/>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>


</ContentPage>